        <Label 
            AbsoluteLayout.LayoutBounds="0.5, 0.065, 1, 0.1"
            AbsoluteLayout.LayoutFlags="All"
            HorizontalOptions="Center"
            Text="Scholae"
            FontSize="60"
            FontFamily="norican"
            TextColor="{x:StaticResource TextColorLight}"/>

        <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.25, 0.9, 0.17" 
                     AbsoluteLayout.LayoutFlags="All">
            <Frame Background="#8093BA"
                  HeightRequest="25"
                  CornerRadius="30"/>
            <Frame
                 Background="#8093BA"
                 HeightRequest="25"
                 CornerRadius="30"
                VerticalOptions="EndAndExpand"/>
        </StackLayout>

        <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.25, 0.8, 0.17" 
                     AbsoluteLayout.LayoutFlags="All">
            <!--Email-->
            <Entry
                x:Name="EmailEntry"
                Placeholder="Email" 
                FontSize="20"
                Margin="0,5,0,0"
                Text="{Binding Email}"
                BackgroundColor="#8093BA"
                PlaceholderColor="{x:StaticResource TextColorDark}"
                />
            <!--Password-->
            <Entry
                x:Name="PasswordEntry"
                Placeholder="Password" 
                IsPassword="True"
                FontSize="20"
                VerticalOptions="EndAndExpand"
                Margin="0,0,0,9"
                Text="{Binding Password}"
                PlaceholderColor="{x:StaticResource TextColorDark}"
                BackgroundColor="#8093BA"/>
        </StackLayout>



        <StackLayout Orientation="Horizontal" 
                     AbsoluteLayout.LayoutBounds="0.5,0.4,0.9,0.1"
                     AbsoluteLayout.LayoutFlags="All"
                     Spacing="0.5">
            <!--Ricorda nome utente e password OBSOLETO (?) -->
            <!--<Switch IsToggled="{Binding RememberMe}"/>
            <Label Text="Ricordami" TextColor="WhiteSmoke" 
                   FontSize="14" FontAttributes="Italic"
                   VerticalTextAlignment="Center"/>-->
            <!--Password dimenticata-->
            <Label 
                Text="Password dimenticata?" TextColor="{x:StaticResource BackgroundAppLight}" 
                FontSize="16" FontAttributes="Italic" 
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="End"
                HorizontalOptions="EndAndExpand"/>
        </StackLayout>


        <!--Per passare alla registrazione-->
        <StackLayout Orientation="Horizontal" 
                     AbsoluteLayout.LayoutBounds="0.2, 0.85, 0.9, 0.05"
                     AbsoluteLayout.LayoutFlags="All"
                     >
            <!--Non hai un account-->
            <Label 
                Text="Non hai un account?"
                TextColor="{x:StaticResource TextColorDark}"
                FontSize="18"
                FontAttributes="Italic"
               HorizontalTextAlignment="Start"
               VerticalTextAlignment="Start" />
            <!--Bottone registrati-->
            <Label x:Name="registrati" 
               Text="Registrati" TextColor="{x:StaticResource TextColorDark}"
               FontSize="18" FontAttributes="Bold"
               VerticalTextAlignment="Start"
               HorizontalOptions="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRegistrationPage"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
        
        <!--Login-->
        <Button AbsoluteLayout.LayoutBounds="0.5,0.48,0.3,0.07"
                AbsoluteLayout.LayoutFlags="All"
                Text="Login"
                TextColor="{x:StaticResource TextColorDark}"
                FontSize="20"
                FontAttributes="Bold"
                CornerRadius="20"
                BackgroundColor="{x:StaticResource SecondaryColor}"
                Clicked="Login"/>

